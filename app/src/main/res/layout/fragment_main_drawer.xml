<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f1f1f1"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="10dp"
        android:background="#F1F1F1"
        xmlns:android="http://schemas.android.com/apk/res/android" >


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/start_background"
            android:padding="5dp"
            android:id="@+id/startLayout" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start" />
            <AutoCompleteTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".85"
                android:inputType="textAutoComplete"
                android:id="@+id/startAddressAutoComplete"
                android:hint="start address"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_height="50dp"
            android:background="@drawable/start_background"
            android:padding="5dp"
            android:id="@+id/endLayout" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End" />
            <AutoCompleteTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="end address"
                android:inputType="textAutoComplete"
                android:layout_weight=".80"
                android:id="@+id/endAddressAutoComplete"
                android:singleLine="true" />
            <CheckBox
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:id="@+id/sameStartCheckBox"
                android:textSize="12dp"
                android:text="Same as start"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_height="50dp"
            android:background="@drawable/start_background"
            android:padding="5dp"
            android:id="@+id/addLayout" >


            <AutoCompleteTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".70"
                android:hint="add a destination"
                android:id="@+id/addAddressAutoComplete"
                android:singleLine="true" />
            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:hapticFeedbackEnabled="true"
                android:background="@drawable/add_button"
                android:text="Add" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#f1f1f1"
            android:padding="5dp"
            android:id="@+id/optimizedLayout" >

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#f1f1f1"
                android:id="@+id/destinationListView">

            </ListView>
        </LinearLayout>
    </LinearLayout>
</ScrollView>